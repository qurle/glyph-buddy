<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- This permission is required to be able access the Glyph Matrix -->
    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NothingAndroidSDKDemo">

        <!-- Nothing API Key -->
        <meta-data
            android:name="NothingKey"
            android:value="test" />

        <activity
            android:name="net.qurle.glyphs.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NothingAndroidSDKDemo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Buddy Service -->
        <service
            android:name="net.qurle.glyphs.toys.buddy.BuddyService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name_buddy" />
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/buddy_toy_preview" />
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/toy_summary_buddy" />
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1" />
        </service>

        <!-- Counter Demo Service -->
        <service
            android:name="net.qurle.glyphs.toys.counter.CounterDemoService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name_counter" />
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/counter_toy_preview" />
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/toy_summary_buddy" />
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1" />
        </service>

        <!-- Animation Demo Service -->
        <service
            android:name="net.qurle.glyphs.toys.sine.SineDemoService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name_sine" />
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/sine_toy_preview" />
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/toy_summary_sine" />
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1" />
        </service>

        <!-- Glyph Button Demo Service -->
        <service
            android:name="net.qurle.glyphs.toys.noise.NoiseDemoService"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY" />
            </intent-filter>

            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/toy_name_noise" />
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/noise_toy_preview" />
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/toy_summary_noise" />
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1" />
        </service>

    </application>

</manifest>